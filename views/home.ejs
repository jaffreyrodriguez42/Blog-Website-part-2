<%- include("partials/header"); -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>

<h2>Posts</h2>

<% if(posts.length == 0){ %>
	<h4>There is no post available.</h4>
<% }else{ %>
	<% posts.forEach(function(post){ %>
		<h4><%= post.postTitle %></h4>
		<% let postBody = post.postBody; %>
		<% let postBodyTrimmed = postBody.substr(0, 99); %>
		<p><%= postBodyTrimmed + " ..." %></p>
	<% }); %>
<% } %>

<%- include("partials/footer") -%>

